<!doctype html>
<html lang="en">
  <head>
    <title>ZunkunftsTag 2023 Leon</title>
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/">Homepage</a></li>
        <li><a href="/fragebogen">Fragebogen</a></li>
        <li><a href="/tictactoe">TicTacToe</a></li>
        <li><a href="/scherensteinpapier">Schere Stein Papier</a></li>
      </ul>
    </nav>
    <main>
      <div class="game">
        <div class="column">
          <img src="" data-computer="stein" /><br />
        </div>
        <div class="column">
          <img src="/stein.jpg" data-ssp="stein" /><br />
          <img src="/schere.jpg" data-ssp="schere" /><br />
          <img src="/papier.jpg" data-ssp="papier" />
        </div>
      </div>
      <h1 data-resultat></h1>
    </main>
  </body>

  <script>
    function click(auswahl) {
      const result = resultat(auswahl);

      console.log(result);
      const element = document.querySelector("[data-resultat]");
      element.innerHTML = result;
      console.log(auswahl);
    }

    function resultat(meineAuwahl) {
      let computer = computerAuswahl();
      if (meineAuwahl === computer) {
        return "unentschieden";
      }
      if (meineAuwahl === "schere" && computer === "stein") {
        return "verloren";
      }
      if (meineAuwahl === "stein" && computer === "schere") {
        return "gewonnen";
      }

      if (meineAuwahl === "schere" && computer === "papier") {
        return "gewonnen";
      }
      if (meineAuwahl === "papier" && computer === "schere") {
        return "verloren";
      }

      if (meineAuwahl === "papier" && computer === "stein") {
        return "gewonnen";
      }
      if (meineAuwahl === "stein" && computer === "papier") {
        return "verloren";
      }
    }

    function computerAuswahl() {
      // TODO: ZufÃ¤lliger Wert
      let auswahl;

      let zufall = Math.floor(Math.random() * 3);
      if (zufall === 0) {
        auswahl = "schere";
      }
      if (zufall === 1) {
        auswahl = "stein";
      }
      if (zufall === 2) {
        auswahl = "papier";
      }
      const element = document.querySelector("[data-computer]");
      element.src = "/" + auswahl + ".jpg";
      return auswahl;
    }

    // Click verbinden mit Click funktion
    document.querySelectorAll("[data-ssp]").forEach((element) => {
      /* @ts-ignore */
      element.addEventListener("click", () => click(element.dataset.ssp));
    });
  </script>

  <style>
    .game {
      display: flex;
      justify-content: space-evenly;
    }

    nav {
      position: sticky;
      top: 0;
      left: 0;
      width: 100%;
      background-color: azure;
    }

    nav ul {
      list-style: none;
      margin: 0;
      padding: 10px;
    }

    a,
    a:visited {
      text-decoration: none;
      color: darkturquoise;
    }

    nav li {
      display: inline;
      padding: 20px;
    }

    img {
      width: 175px;
    }

    body {
      background-color: rgb(50, 15, 146);
      font-family: Arial, Helvetica, sans-serif;
      color: rgba(209, 0, 87, 0.842);
      margin: 0;
    }

    main {
      padding: 20px 20px;
    }

    h1 {
      text-align: center;
    }
  </style>
</html>
